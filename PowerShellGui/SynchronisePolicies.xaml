<Window x:Class="PowerShellGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerShellGui"
       
        mc:Ignorable="d" Height="600" Width="1080" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Foreground="White" ResizeMode="NoResize" WindowStyle="None">
    <Grid Background="#FF1E1E1E">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="700" Height="500" Margin="50 50 0 0">
           <TextBlock Text="Enter computernames:" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="18" Foreground="White" FontFamily="Segoe UI" Width="230" Height="40"/>
           <TextBox VerticalAlignment="Bottom" Height="450" Margin="0 8 0 0" Background="#FF333333" Foreground="White" Cursor="ScrollNS" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Width="325">
            <Button VerticalAlignment="Top" Margin="40 98 50 0" Background="#FF1EB08B" Content="Syncronise" Foreground="White"></Button>
        </StackPanel>        
    </Grid>
</Window>
