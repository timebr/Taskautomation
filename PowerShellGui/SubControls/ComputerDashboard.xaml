<UserControl x:Class="PowerShellGui.SubControls.ComputerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerShellGui"
        mc:Ignorable="d"
        Height="auto" Width="auto">
    <Grid Background="#FF1E1E1E">
        <Grid Width="600" Height="100">
            <Rectangle x:Name="LoadingBar1" Width="100" Height="5" VerticalAlignment="Top" HorizontalAlignment="Left" Fill="PaleVioletRed" Margin="-100 0 0 0" Visibility="Collapsed"/>
            <Rectangle x:Name="LoadingBar2" Width="100" Height="5" VerticalAlignment="Top" HorizontalAlignment="Left" Fill="PaleVioletRed" Margin="-100 0 0 0" Visibility="Collapsed"/>

            <Button VerticalAlignment="Top" HorizontalAlignment="Left" Background="#FF1EB08B" Content="Stop" Foreground="White" Height="50" Width="200" Margin="0 40 0 0" Click="ButtonStop_Click"></Button>
        </Grid>
    </Grid>
</UserControl>
